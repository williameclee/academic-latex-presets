\renewcommand{\titlepage}{
	% \colorbox{yellow}{\parbox{\linewidth}{\usebeamerfont{title}\usebeamercolor[fg]{title}\raggedright\@info@title}}
	\begin{textblock}{28}[0,1](2,9)
		{\usebeamerfont{title}\usebeamercolor[fg]{title}\raggedright\@info@title \par}
	\end{textblock}
	\begin{textblock}{28}[0,1](2,11)
		{\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\raggedright\@info@subtitle \par}
	\end{textblock}
	\if@info@institute
		\begin{textblock}{28}[0,1](2,12)
			{\usebeamerfont{author}\usebeamercolor[fg]{author}\raggedright
				\foreachitem\@info@author@item\in\@info@author{%
					\ifnum\@info@author@itemcnt=1
					\@info@author@item%
					\else
						\ifnum\@info@author@itemcnt=\@info@authorlen
							, \& \@info@author@item%
						\else
							, \@info@author@item%
						\fi
					\fi
				}
			}
		\end{textblock}
		\begin{textblock}{28}[0,1](2,16)
			{\usebeamerfont{institute}\usebeamercolor[fg]{institute}\raggedright
				\foreachitem\@info@institute@item\in\@info@institute[]{
					\@info@institute@item \par
				}
			}
		\end{textblock}
	\else
		\begin{textblock}{28}[0,1](2,16)
			{\usebeamerfont{author}\usebeamercolor[fg]{author}\raggedright
				\foreachitem\@info@author@item\in\@info@author{%
					\ifnum\@info@author@itemcnt=1
					\@info@author@item%
					\else
						\ifnum\@info@author@itemcnt=\@info@authorlen
							, \& \@info@author@item%
						\else
							, \@info@author@item%
						\fi
					\fi
				}
			}
		\end{textblock}
	\fi
	% \usebeamerfont{institute}\usebeamercolor{institute}\@info@institute
}

